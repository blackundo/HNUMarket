# ==============================================
# HNUMarket Production Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!

# ----------------------------------------------
# Supabase Configuration (REQUIRED)
# ----------------------------------------------
# Get these from your Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-from-dashboard

# ----------------------------------------------
# Frontend Public Variables
# ----------------------------------------------
# These are exposed to the browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Backend API URL - Update with your production domain
# Example: https://api.yourdomain.com/api
NEXT_PUBLIC_API_URL=http://backend:3001/api

# ----------------------------------------------
# CORS Configuration
# ----------------------------------------------
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000

# ----------------------------------------------
# Optional Configuration
# ----------------------------------------------
# Enable for debugging (not recommended in production)
# DEBUG=false

NEXT_PUBLIC_GOOGLE_GENAI_API_KEY=